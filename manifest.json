{
  "manifest_version": 3,
  "name": "Gemini Assistant",
  "version": "1.0",
  "description": "Right-click to ask Gemini questions about highlighted text or general queries",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}